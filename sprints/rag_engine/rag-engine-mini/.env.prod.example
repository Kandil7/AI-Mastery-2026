# =============================================================================
# RAG Engine Mini - Production Environment Template
# =============================================================================

# --- App Settings ---
ENV=prod
LOG_LEVEL=INFO
APP_SECRET_KEY=generate_a_long_random_string_here

# --- Infrastructure ---
# Use strong passwords in production!
DB_PASSWORD=YOUR_STRONG_POSTGRES_PASSWORD
DATABASE_URL=postgresql+psycopg://postgres:${DB_PASSWORD}@postgres:5432/rag
REDIS_URL=redis://redis:6379/0
QDRANT_HOST=qdrant

# --- LLM Providers ---
# Choose your production backend
LLM_BACKEND=openai 
OPENAI_API_KEY=sk-proj-...

# Optional: Gemini Fallback
GEMINI_API_KEY=AIza...

# --- Security ---
# API Key for your tenants/clients
DEMO_API_KEY=prod_key_xxxxxxxxxxxxxxxx

# --- RAG Settings ---
CHUNK_MAX_TOKENS=512
CHUNK_OVERLAP=50
EMBEDDING_DIM=1536
