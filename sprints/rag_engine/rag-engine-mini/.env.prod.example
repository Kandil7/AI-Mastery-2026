# =============================================================================
# RAG Engine Mini - Production Environment Template
# =============================================================================
# Use this template for actual deployments. Keep secrets safe!

# --- App Settings ---
ENV=prod
LOG_LEVEL=INFO
APP_SECRET_KEY=generate_a_long_random_string_here

# --- Infrastructure ---
# Use strong passwords in production!
DB_PASSWORD=YOUR_STRONG_POSTGRES_PASSWORD
DATABASE_URL=postgresql+psycopg://postgres:${DB_PASSWORD}@postgres:5432/rag
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# --- LLM Providers ---
# Choose your backend: openai | gemini | huggingface | ollama
LLM_BACKEND=openai 

# OpenAI
OPENAI_API_KEY=sk-proj-...
OPENAI_CHAT_MODEL=gpt-4o-mini

# Gemini
GEMINI_API_KEY=AIza...
GEMINI_CHAT_MODEL=gemini-1.5-flash

# Hugging Face (Inference API recommended for production)
HF_API_KEY=hf_...
HF_CHAT_MODEL=mistralai/Mistral-7B-Instruct-v0.2
HF_USE_INFERENCE_API=true

# --- Embeddings ---
# backend: openai | local | gemini | huggingface
EMBEDDINGS_BACKEND=openai
EMBEDDING_DIM=1536
OPENAI_EMBED_MODEL=text-embedding-3-small
HF_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
GEMINI_EMBED_MODEL=models/embedding-001

# --- Security & Tenants ---
DEMO_API_KEY=prod_key_xxxxxxxxxxxxxxxx
API_KEY_HEADER=X-API-KEY

# --- Agentic Features ---
TAVILY_API_KEY=tvly-...                   # Required for Web Search fallback

# --- RAG Parameters ---
CHUNK_MAX_TOKENS=512
CHUNK_OVERLAP=50
USE_REAL_DB=true
